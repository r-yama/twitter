<!DOCTYPE html>
<html>
<head>
  <title>Twitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
</head>
<body>
  <header>
    <ul>
      <div class="container-fluid">
        <div class="row">
          <nav class="navbar navbar-default navbar-fixed-top">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              </button>
              <%= link_to "ホーム", root_path, class: "glyphicon glyphicon-home" %>
              <%= link_to "通知", root_path, class: "glyphicon glyphicon-bell" %>
              <%= link_to "メッセージ", root_path, class: "glyphicon glyphicon-envelope" %>
              <%= link_to "ツイート一覧", tweets_path, class: "glyphicon glyphicon-list-alt" %>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-right">
                <form class="navbar-form navbar-left" role="search">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="キーワード検索">
                  </div>
                  <button type="submit" class="glyphicon glyphicon-search"></button>
                </form>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">メニュー <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "プロフィール", root_path %></li>
                    <li><%= link_to "設定", root_path %></li>
                    <li><%= link_to "ログイン", root_path %></li>
                    <li><%= link_to "ログアウト", root_path %></li>
                  </ul>
                </li>
                <li>
                  <%= link_to "ツイート", new_tweet_path %>
                </li>
              </ul>
              <div id="twitter_bird">
                <img src="<%= asset_path "tweets_mark.png" %>">
              </div>
          </nav>
        </div>
  </header>

<%= yield %>

</body>
</html>
